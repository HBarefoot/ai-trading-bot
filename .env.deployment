# Environment Configuration for Deployment
# Copy these to your Railway/cloud provider environment variables

# Database (use your cloud database URL)
DATABASE_URL=postgresql://username:password@host:port/dbname
REDIS_URL=redis://host:port/0

# Exchange API Keys (REQUIRED - add your real keys)
BINANCE_API_KEY=your_real_binance_api_key
BINANCE_SECRET_KEY=your_real_binance_secret_key

# AI/LLM API Keys (for sentiment analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Security (REQUIRED - change these!)
SECRET_KEY=your_production_secret_key_change_this
JWT_SECRET=your_production_jwt_secret

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production

# Trading Settings
TRADING_ENABLED=false  # Set to true only when ready for live trading
PAPER_TRADING=true
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.15

# API Configuration (will be auto-set by Railway)
PORT=8000
API_URL=https://your-app-name.railway.app

# Dashboard Authentication
APP_PASSWORD=your_dashboard_password